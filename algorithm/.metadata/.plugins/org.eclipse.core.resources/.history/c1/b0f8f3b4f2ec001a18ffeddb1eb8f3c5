package basic100;

public class basic18 {

	public static void main(String[] args) {
		
		int input = 5;
		
		for (int i = 0; i < input; i++) {
			
			for (int j = 1; j < input+1; j++) {
				
				if (j>i) {
					System.out.print("ци");
				}else {
					System.out.print("А┌");
				}
				
			}
			System.out.println();
		}
		
		
	}
	
}
