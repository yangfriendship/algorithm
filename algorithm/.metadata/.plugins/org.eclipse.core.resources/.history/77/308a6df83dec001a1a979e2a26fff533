package basic100;

//각 자리수 합 구하기
//input : 1242
//answer : 9
public class basic9 {

	public static void main(String[] args) {
		
		int input = 1242;
		int sum = 0;
		int count = 1;
		while(input>1) {
			++count; 
			sum += input%(count*10);
			
			
		}
		System.out.println(input%10);
		System.out.println(input%100);
		System.out.println(input%1000);
		
	}//
}
