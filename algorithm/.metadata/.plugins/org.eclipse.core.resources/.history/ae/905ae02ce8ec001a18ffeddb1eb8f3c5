package basic100;

//직사각형 출력 
//input : 4
// 1234
// 5678
// 9 ...
// ... 16
public class basic11_2 {

	public static void main(String[] args) {

		int input = 4;
		int[][] list = new int[input][input];
		int count = 0;
		for (int i = 0; i < list.length; i++) {

			if (i % 2 == 0) {
				for (int j = 0; j < list.length; j++) {
					System.out.printf("%4d",j+1);
				}

			} else if (i % 2 != 0) {
				for (int j = input; j >0; j--) {

				}
			}
			count +=input;
			System.out.println();

		}

	}
}
