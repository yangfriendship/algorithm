package basic100;

//소문자 -> 대문자 , 대문자-> 소문자
public class basic5_String {

	public static void main(String[] args) {

		String str = "hello WoLld";
		char[] arr = new char[str.length()];
		
		arr = str.toCharArray();
		
		for(char item : arr) {
			System.out.print(item);
		}
		
		for(char item : arr) {

			if(item >= 'a' && item <='z') {
				item = (char) (item+('A'-'a'));
			}
			
		}
		
		System.out.println();
		for(char item : arr) {
			System.out.print(item);
		}
		
	}
}
