package programmers.level1;

public class Lesson12930 {
	
public String func(String str) {
	String[] str2 = str.split("");
	int count = 0;
	for (int i = 0; i < str2.length; i++) {
		
		if(str2[i].equals(" ")) {
			count = 0;
		}else if(count/2==0) {
			str2[i].toUpperCase();
		}else if(count/2==0) {
			str2[i].toLowerCase();
		}
		
	}
	
	return str2.toString();
	
}
	
public static void main(String[] args) {
	String answer = "";
	
	
}
}
